<% # produces output like:
   #     {
   #             "name" : "Nemesis",          
   #             "code" : "NMS",              
   #           "border" : "black",            
   #             "type" : "expansion",
   #            "block" : "Masques",          
   #       "onlineOnly" : false,              
   #          "booster" : [ "rare", ... ],    
   #            "cards" : [ {}, {}, {}, ... ] 
   # }
   %>
{
  "name"       : <%= jf(@cardset.name) %>,
  "code"       : "MV<%= @cardset.id %>",
  "border"     : <%= jf(@cardset.configuration.border_colour) %>,
                     
  "sourceURL"    : <%= jf(cardset_url(@cardset, :format => :json)) %>,
  "owner"        : <%= jf(@cardset.user.name) %>,
  "lastChange"   : <%= jf(@cardset.updated_at) %>,
  
  "type"       : "expansion",
  "onlineOnly" : true,
  "booster"    : <%= jf(@cardset.booster_structure[1]) %>,
  "cards"      : [
  <% cards_to_show = @cardset.draftable_cards %>
  <% cards_to_show.each do |card| %>
    <% @card = card %>
<%= render :partial => "shared/individual_card" %>
    <% if @card != cards_to_show.last %>, <% end %>
  <% end %>
                 ]
}
