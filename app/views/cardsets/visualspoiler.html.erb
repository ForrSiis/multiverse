<h1>
  <%= link_to @cardset.name, @cardset %>
</h1>
<% @title = "#{@cardset.name}: Visual Spoiler" %>

<%= render 'setviews' %>

<p>Showing all <%= @cardset.cards.count %> cards
</p>
<table>
  <% @cardset.cards.sort.each_slice(5) do |cards| %>
    <tr>
      <% cards.each do |@card| %>
        <td>
          <%= render :partial => 'shared/prettycard', :locals => {:link => true} %>
          <%= render :partial => 'shared/cardcommentcount' %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>

<p><br>
  <%= render 'setviews' %>
</p>