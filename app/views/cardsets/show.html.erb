<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @cardset.name %>
</p>

<p>
  <b>Creator:</b>
  <% @owner = User.find_by_id(@cardset.user_id) %>
  <%= link_to @owner.name, @owner %>
</p>

<p>
  <b>Description:</b>
  <%= @cardset.description %>
</p>

<table>
 <tr>
   <th>Name</th>
   <th>Rarity</th>
   <th>Cost</th>
   <th>Type</th>
   <th colspan="2">P/T</th>
   <th colspan="3">&nbsp;</th>
<% @cardset.cards.each do |card| %>
  <tr>
    <td><%= link_to card.name, card %></td>
    <td><%= card.rarity.capitalize %></td>
    <td><%= card.cost %></td>
    <td>
      <%= card.supertype %>
      <%= card.cardtype %>
      <% if !card.subtype.nil? %>
        &ndash; <%= card.subtype %>
      <% end %> </td>
    <td><%= card.power %></td>
    <td><%= card.toughness %></td>
    <td><%= link_to 'Edit', edit_card_path(card) %></td>
    <td><%= link_to 'Delete', card, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<br><br>
<%= link_to 'Edit set description', edit_cardset_path(@cardset) %> |
<%= link_to 'All cardsets', cardsets_path %>
