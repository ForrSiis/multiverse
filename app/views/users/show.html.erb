<h1><%= @title = @user.name %></h1>

<%= render @user %>
<p><%= link_to "Create new cardset", new_cardset_path %></p>

<% if Decklist.enabled? %>
<div class="decklists user_list">
<h3>Decklists</h3>
<p><%= @user.name %> has created <%= pluralize(@user.decklists.count, "decklist") %><% if @user.decklists.empty? %>.<% else %>: <% @user.decklists.each do |deck| %><%= link_to deck, deck.name %><% end %><% end %></p>
<% if @user == current_user %>
  <p><%= link_to "Create new decklist", new_user_decklist_path(@user) %></p>
<% end %>
</div>
<% end %>

<p>
  <% if @user == current_user %>
    <%= link_to "Edit profile", edit_user_path(@user) %> |
    <%= link_to "Sign out", signout_path, :method => :delete %> |
  <% end %>
  <%= link_to "All users", users_path %>
</p>
