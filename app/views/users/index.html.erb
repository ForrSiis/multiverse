<h1><%= @title = "All users" %></h1>

<div>
  <% if params[:order] == "alpha" %>
    (<%= link_to "By join date", users_path %> | Alphabetical)
    <% @users.sort_by! &:name %>
  <% else %>
    (By join date | <%= link_to "Alphabetical", users_path(:order => :alpha) %>)
    <% @users.sort_by! &:created_at %>
  <% end %>
</div>

<p><%= will_paginate %></p>

<%= render @users %>

